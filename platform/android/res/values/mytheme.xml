<resources>
    <style name="Theme.OAI" parent="@style/Theme.AppCompat">
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
    </style>
 
    <style name="MyDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
         <item name="colorAccent">#000033</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="MyDatePicker" parent="android:Widget.Holo.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
    
</resources>